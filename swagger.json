  },
  "components": {
    "schemas": {
      "CallbackModel": {
        "type": "object",
        "required": [
          "access_token",
          "refresh_token",
          "cluster_url",
          "subject",
          "id_token"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          },
          "cluster_url": {
            "type": "string"
          },
          "id_token": {
            "type": "string"
          },
          "refresh_token": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          }
        }
      },
      "GetAllVisibleClusterBody": {
        "type": "object",
        "required": [
          "clusters"
        ],
        "properties": {
          "clusters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VisibleCluster"
            }
          }
        }
      },
      "VisibleCluster": {
        "type": "object",
        "description": "Model representing a cluster visible to the user",
        "required": [
          "enabled",
          "namespace",
          "name",
          "sso_enabled"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "is_reachable": {
            "type": [
              "boolean",
              "null"
            ]
          },
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "sso_enabled": {
            "type": "boolean"
          }
        }
      }
    }
