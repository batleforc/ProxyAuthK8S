{
  "openapi": "3.1.0",
  "info": {
    "title": "api",
    "description": "Reverse Proxy K8s Api",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/api/v1/clusters": {
      "get": {
        "tags": [
          "api_clusters"
        ],
        "summary": "Get all cluster visible to the user",
        "description": "if none return an empty array",
        "operationId": "get_all_visible_cluster",
        "responses": {
          "200": {
            "description": "ATM nothing real",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllVisibleClusterBody"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "oauth2": []
          }
        ]
      }
    },
    "/api/v1/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Base path just to answer if the server is up and running.",
        "description": "This is also used for health checks.",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "Nothing"
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/clusters/{ns}/{cluster}/auth/login": {
      "get": {
        "tags": [
          "auth_clusters"
        ],
        "summary": "Redirect to the cluster's login page",
        "description": "If the cluster is not found or disabled, return 404",
        "operationId": "cluster_login",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "oauth2": []
          }
        ]
      }
    },
    "/clusters/{ns}/{cluster}/{path}": {
      "get": {
        "tags": [
          "proxy_clusters"
        ],
        "summary": "Cluster redirect",
        "description": "Redirect to the cluster if exists",
        "operationId": "get_redirect",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      },
      "put": {
        "tags": [
          "proxy_clusters"
        ],
        "summary": "Cluster redirect",
        "description": "Redirect to the cluster if exists",
        "operationId": "put_redirect",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      },
      "post": {
        "tags": [
          "proxy_clusters"
        ],
        "summary": "Cluster redirect",
        "description": "Redirect to the cluster if exists",
        "operationId": "post_redirect",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      },
      "delete": {
        "tags": [
          "proxy_clusters"
        ],
        "summary": "Cluster redirect",
        "description": "Redirect to the cluster if exists",
        "operationId": "delete_redirect",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      },
      "patch": {
        "tags": [
          "proxy_clusters"
        ],
        "summary": "Cluster redirect",
        "description": "Redirect to the cluster if exists",
        "operationId": "patch_redirect",
        "responses": {
          "200": {
            "description": "Response from remote cluster"
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetAllVisibleClusterBody": {
        "type": "object",
        "required": [
          "clusters"
        ],
        "properties": {
          "clusters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VisibleCluster"
            }
          }
        }
      },
      "VisibleCluster": {
        "type": "object",
        "description": "Model representing a cluster visible to the user",
        "required": [
          "enabled",
          "namespace",
          "name",
          "sso_enabled"
        ],
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "is_reachable": {
            "type": [
              "boolean",
              "null"
            ]
          },
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          },
          "sso_enabled": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "health",
      "description": "Health check endpoints."
    },
    {
      "name": "api_clusters",
      "description": "API endpoints used by the front."
    },
    {
      "name": "proxy_clusters",
      "description": "Proxy cluster endpoints."
    },
    {
      "name": "auth_clusters",
      "description": "Authentication endpoints for clusters."
    }
  ]
}
