  "paths": {
    "/api/v1/clusters": {
      "get": {
        "tags": [
          "api_clusters"
        ],
        "summary": "Get all cluster visible to the user",
        "description": "if none return an empty array",
        "operationId": "get_all_visible_cluster",
        "responses": {
          "200": {
            "description": "ATM nothing real",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAllVisibleClusterBody"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "oauth2": []
          }
        ]
      }
    },
    "/clusters/{ns}/{cluster}/auth/callback": {
      "get": {
        "tags": [
          "auth_clusters"
        ],
        "summary": "Callback from the cluster's OIDC provider",
        "description": "If the cluster is not found or disabled, return 404",
        "operationId": "callback_login",
        "parameters": [
          {
            "name": "ns",
            "in": "path",
            "description": "Namespace",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cluster",
            "in": "path",
            "description": "Cluster name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-front-callback",
            "in": "header",
            "description": "If it's from the frontend, this header will be set.",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          {
            "name": "x-kubectl-callback",
            "in": "header",
            "description": "If it's from kubectl plugin, this header will be set.",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          {
            "name": "code",
            "in": "query",
            "description": "Authorization code from the OIDC provider",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "state",
            "in": "query",
            "description": "State parameter to prevent CSRF",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response from remote cluster",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallbackModel"
                }
              }
            }
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/clusters/{ns}/{cluster}/auth/login": {
      "get": {
        "tags": [
          "auth_clusters"
        ],
        "summary": "Redirect to the cluster's login page",
        "description": "If the cluster is not found or disabled, return 404",
        "operationId": "cluster_login",
        "parameters": [
          {
            "name": "ns",
            "in": "path",
            "description": "Namespace",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cluster",
            "in": "path",
            "description": "Cluster name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-front-callback",
            "in": "header",
            "description": "If it's from the frontend, this header will be set.",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          {
            "name": "x-kubectl-callback",
            "in": "header",
            "description": "If it's from kubectl plugin, this header will be set.",
            "required": true,
            "schema": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response from remote cluster",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Cluster not found or disabled."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "oauth2": []
          }
        ]
      }
    },
