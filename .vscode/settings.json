{
  "cSpell.words": [
    "actix",
    "appender",
    "authelia",
    "deadpool",
    "finalizer",
    "forwardauth",
    "healthcheck",
    "openidconnect",
    "PGID",
    "Pkce",
    "proxykubeapis",
    "proxys",
    "PUID",
    "reqwest",
    "schemars",
    "taskfile",
    "thiserror",
    "traefik",
    "utoipa",
    "weebo",
    "proxyk8sauth"
  ],
  "task": {
    "outputTo": "terminal"
  },
  "editor.fontFamily": "'FiraCode Nerd Font', 'FiraCode NF','Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,

  "[rust]": {
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep"
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Vue.volar"
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "[dockerfile]": {
    "editor.tabSize": 2
  },
  "[properties]": {
    "editor.tabSize": 2
  },
  "[helm]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "tim-koehler.helm-intellisense"
  }
}
